<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/light_grey">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/activity_main_title"
        android:textSize="@dimen/activity_main_title_text_size"
        android:textStyle="bold"
        android:id="@+id/activity_main_title"
        android:layout_margin="@dimen/activity_main_title_margin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spotify_btn_text"
        android:id="@+id/spotify_btn"
        android:layout_below="@+id/activity_main_title"
        android:layout_marginTop="@dimen/main_btn_margin"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_alignRight="@+id/scores_btn"
        android:layout_alignEnd="@+id/scores_btn"
        android:layout_alignLeft="@+id/scores_btn"
        android:layout_alignStart="@+id/scores_btn"
        android:padding="@dimen/btn_padding"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores_btn_text"
        android:id="@+id/scores_btn"
        android:layout_below="@+id/spotify_btn"
        android:layout_marginTop="@dimen/main_btn_margin"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_alignRight="@+id/library_app_btn"
        android:layout_alignEnd="@+id/library_app_btn"
        android:layout_alignLeft="@+id/library_app_btn"
        android:layout_alignStart="@+id/library_app_btn"
        android:padding="@dimen/btn_padding"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_app_btn_text"
        android:id="@+id/library_app_btn"
        android:layout_below="@+id/scores_btn"
        android:layout_marginTop="@dimen/main_btn_margin"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_alignRight="@+id/build_it_bigger_btn"
        android:layout_alignEnd="@+id/build_it_bigger_btn"
        android:layout_alignLeft="@+id/build_it_bigger_btn"
        android:layout_alignStart="@+id/build_it_bigger_btn"
        android:padding="@dimen/btn_padding"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger_btn_text"
        android:id="@+id/build_it_bigger_btn"
        android:layout_below="@+id/library_app_btn"
        android:layout_marginTop="@dimen/main_btn_margin"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_alignLeft="@+id/xyz_reader_btn"
        android:layout_alignStart="@+id/xyz_reader_btn"
        android:padding="@dimen/btn_padding"
        android:layout_alignRight="@+id/xyz_reader_btn"
        android:layout_alignEnd="@+id/xyz_reader_btn"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz_reader_btn_text"
        android:id="@+id/xyz_reader_btn"
        android:layout_below="@+id/build_it_bigger_btn"
        android:layout_marginTop="@dimen/main_btn_margin"
        android:layout_marginBottom="@dimen/main_btn_margin"
        android:layout_alignRight="@+id/capstone_btn"
        android:layout_alignEnd="@+id/capstone_btn"
        android:layout_alignLeft="@+id/capstone_btn"
        android:layout_alignStart="@+id/capstone_btn"
        android:padding="@dimen/btn_padding"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_btn_text"
        android:id="@+id/capstone_btn"
        android:layout_below="@+id/xyz_reader_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_btn_margin"
        android:padding="@dimen/btn_padding"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:onClick="displayToast"/>

</RelativeLayout>
